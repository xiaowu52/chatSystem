@page
@model Web.Client.Pages.Home.LoginModel
@{
    ViewData["Title"] = "登录";
    Layout = "_LoginLayout";
}

<div class="login-container">
    <div class="login-box">
        <h2 class="text-center mb-4">欢迎登录聊天系统</h2>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger">@Model.ErrorMessage</div>
        }

        <form method="post">
            <div class="mb-3">
                <label asp-for="UserName" class="form-label">用户名</label>
                <input asp-for="UserName" class="form-control" required />
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">密码</label>
                <input asp-for="Password" type="password" class="form-control" required />
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">登录</button>
            </div>

            <div class="mt-3 text-center">
                <a asp-page="/Home/Register">还没有账号？立即注册</a>
            </div>
        </form>
    </div>
</div>
