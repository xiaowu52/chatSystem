@page
@model Web.Client.Pages.Groups.CreateModel
@{
    ViewData["Title"] = "创建群聊";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4 class="mb-0">创建群聊</h4>
            <a asp-page="/Home/Index" class="btn btn-outline-secondary btn-sm"><i class="bi bi-arrow-left"></i> 返回</a>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="alert alert-success">
                    @Model.SuccessMessage
                    <div class="mt-2">
                        <a asp-page="/Home/Index" class="btn btn-primary">返回主页</a>
                    </div>
                </div>
            }
            else
            {
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger">@Model.ErrorMessage</div>
                }

                <form method="post">
                    <div class="mb-3">
                        <label asp-for="GroupName" class="form-label">群聊名称</label>
                        <input asp-for="GroupName" class="form-control" required />
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">创建群聊</button>
                    </div>
                </form>
            }
        </div>
    </div>
</div>
